extends base

block content
  main.main
    .card-container
      each tour in tours
        .card
          .card__header
            .card__picture
              .card__picture-overlay &nbsp;
              if tour && tour.imageCover && tour.name
                img.card__picture-img(src=`/img/tours/${tour.imageCover}`, alt=`${tour.name}`)
              else
                img.card__picture-img(src='/img/tours/default.jpg', alt='Image not available')
            h3.heading-tertirary
              if tour && tour.name
                span= tour.name
              else
                span No name provided

          .card__details
            h4.card__sub-heading
              if tour && tour.difficulty && tour.duration
                = `${tour.difficulty} ${tour.duration}-day tour`
              else
                | Details unavailable
            p.card__text
              if tour && tour.summary
                = tour.summary
              else
                | No summary available

            .card__data
              svg.card__icon
                use(xlink:href='/img/icons.svg#icon-map-pin')
              span= tour.startLocation ? tour.startLocation.description : 'No location available'

            .card__data
              svg.card__icon
                use(xlink:href='/img/icons.svg#icon-calendar')
              if tour.startDates && tour.startDates.length > 0
                span= tour.startDates[0].toLocaleString('en-us', {month: 'long', year: 'numeric'})
              else
                span Date unavailable

            .card__data
              svg.card__icon
                use(xlink:href='/img/icons.svg#icon-flag')
              span= tour.locations ? `${tour.locations.length} stops` : 'No stops available'

            .card__data
              svg.card__icon
                use(xlink:href='/img/icons.svg#icon-user')
              span= tour.maxGroupSize ? `${tour.maxGroupSize} people` : 'Group size unknown'

          .card__footer
            p
              span.card__footer-value= tour.price ? `$${tour.price}` : 'Price N/A'
              | 
              span.card__footer-text per person
            p.card__ratings
              span.card__footer-value= tour.ratingsAverage ? tour.ratingsAverage : 'No rating'
              | 
              span.card__footer-text= tour.ratingsQuantity ? `rating (${tour.ratingsQuantity})` : 'No ratings'
            a.btn.btn--green.btn--small(href= tour.slug ? `/tour/${tour.slug}` : '#') Details
